#! /bin/bash

docker run -d \
    --privileged \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v /dev/bus/usb:/dev/bus/usb \
    -v "$HOME/.config/TomTom Sports:/root/TomTom Sports" \
    -v "$HOME/.cache:/root/.cache" \
    -e DISPLAY=unix$DISPLAY \
    --name tomtomsc \
    --rm \
    tomtomsc:latest

